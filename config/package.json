{
  "name": "pilkos",
  "version": "0.1.45",
  "description": "PilkOS desktop experience in Electron.",
  "main": "../src/main.js",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DaddyPilkers/PilkOS.git"
  },
  "scripts": {
    "start": "electron .",
    "generate:icon": "node ../tools/generate-icon.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.4.0",
    "loudness": "^0.4.2",
    "node-wifi": "^2.0.16"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.pilkos.app",
    "productName": "PilkOS",
    "artifactName": "${productName} v${version}.${ext}",
    "extraMetadata": {
      "main": "src/main.js"
    },
    "files": [
      {
        "from": "../src",
        "to": "src",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "directories": {
      "output": "../release"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "../assets/icons/pilkos-logo.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
